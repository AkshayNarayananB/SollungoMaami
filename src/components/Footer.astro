---
import { Icon } from "astro-icon/components";
import MaamiConfig from "../../maami.config";
import { i18n } from "../locales/translation";
import I18nKeys from "../locales/keys";
import SiteViews from "./SiteViews.jsx";
import { getCachedCategories } from '../lib/serverCache';

// 1. FIREBASE IMPORTS
import { db } from "../lib/firebase";
import { collection, getDocs } from "firebase/firestore";

// 2. FETCH DATA
let postsData = [];
postsData = await getCachedCategories(); //cache smart counter

//try {
  //const querySnapshot = await getDocs(collection(db, "blog"));
  //postsData = querySnapshot.docs.map((doc) => doc.data());
//} catch (e) {
  //console.error("Footer fetch error:", e);
//}

// 3. UTILITY: SLUGIFY
const slugify = (text: string) => {
  return text
    .toString()
    .toLowerCase()
    .trim()
    .replace(/\s+/g, "-")
    .replace(/[^\w\-]+/g, "")
    .replace(/\-\-+/g, "-");
};

// 4. AGGREGATE DATA
const categories = new Map();
const tags = new Map();

if (postsData) {
  postsData.forEach((data) => {
    // --- Process Category ---
    if (data.category) {
      const catList = Array.isArray(data.category)
        ? data.category
        : [data.category];

      catList.forEach((cat) => {
        const catName = String(cat || "").trim();
        if (!catName) return;

        const catSlug = slugify(catName);

        if (!categories.has(catSlug)) {
          categories.set(catSlug, { name: catName, posts: [] });
        }
        categories.get(catSlug).posts.push(data);
      });
    }

    // --- Process Tags ---
    if (data.tags && Array.isArray(data.tags)) {
      data.tags.forEach((t) => {
        const tagName = String(t || "").trim();
        if (!tagName) return;

        const tagSlug = slugify(tagName);

        let tagEntry = tags.get(tagSlug);
        if (!tagEntry) {
          tagEntry = { name: tagName, posts: [] };
          tags.set(tagSlug, tagEntry);
        }
        tagEntry.posts.push(data);
      });
    }
  });
}

// 5. EXTRACT KEYS & SORT
// Sort categories by post count (Popularity) for the footer
const categoryKeys = [...categories.keys()].sort((a, b) => {
  return categories.get(b).posts.length - categories.get(a).posts.length;
});

// Sort tags by popularity
const tagKeys = [...tags.keys()].sort((a, b) => {
  return tags.get(b).posts.length - tags.get(a).posts.length;
});
