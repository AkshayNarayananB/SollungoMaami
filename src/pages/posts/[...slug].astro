---
import { getCollection } from "astro:content";
import { IdToSlug } from "../../utils/hash";
import PostLayout from "../../layouts/PostLayout.astro";
import { render } from "astro:content";
import Disqus from 'astro-disqus'; // import the new component

export async function getStaticPaths() {
  const postEntries = await getCollection("posts");
  return postEntries.map((entry) => ({
    params: { slug: IdToSlug(entry.id) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

// Generate slug for this post
const slug = IdToSlug(entry.id);

// Conditionally set the license and banner image props
const licenseProp = entry.data.licenseName
  ? { name: entry.data.licenseName, url: entry.data.licenseUrl }
  : undefined;

const bannerImageProp = entry.data.licenseName ? entry.data.cover : entry.data.image;

// Set the Disqus URL and identifier to be passed as props
const disqusUrl = `${Astro.url.origin}/posts/${slug}`;
const disqusIdentifier = slug;

// Replace 'YOUR_DISQUS_SHORTNAME' with your actual shortname
const disqusShortname = 'YOUR_DISQUS_SHORTNAME';
---
<PostLayout
  title={entry.data.title}
  subTitle={entry.data.description}
  bannerImage={bannerImageProp}
  published={entry.data.published}
  license={licenseProp}
  author={entry.data.author}
  sourceLink={entry.data.sourceLink}
>
  <div class="hidden" data-pagefind-body data-pagefind-weight="10" data-pagefind-meta="title">
    {entry.data.title}
  </div>

  <div data-pagefind-body>
    <Content />
  </div>

  <section class="mt-10">
    <h2 class="text-xl font-bold mb-4">Comments</h2>
    <Disqus
      embed={`https://sollungomaami.disqus.com/embed.js`}
      url={disqusUrl}
      identifier={disqusIdentifier}
    />
  </section>
</PostLayout>
