---
import { getCollection } from "astro:content";
import { IdToSlug } from "../../utils/hash";
import PostLayout from "../../layouts/PostLayout.astro";
import { render } from "astro:content";

export async function getStaticPaths() {
  const postEntries = await getCollection("posts");
  return postEntries.map((entry) => ({
    params: { slug: IdToSlug(entry.id) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

// Generate slug for this post
const slug = IdToSlug(entry.id);

// Conditionally set the license and banner image props
const licenseProp = entry.data.licenseName
  ? { name: entry.data.licenseName, url: entry.data.licenseUrl }
  : undefined;

const bannerImageProp = entry.data.licenseName ? entry.data.cover : entry.data.image;
---
<PostLayout
  title={entry.data.title}
  subTitle={entry.data.description}
  bannerImage={bannerImageProp}
  published={entry.data.published}
  license={licenseProp}
  author={entry.data.author}
  sourceLink={entry.data.sourceLink}
>
  <!-- Hidden title for Pagefind search indexing -->
  <div class="hidden" data-pagefind-body data-pagefind-weight="10" data-pagefind-meta="title">
    {entry.data.title}
  </div>

  <!-- Post content -->
  <div data-pagefind-body>
    <Content />
  </div>

  <!-- Disqus Comments --><section class="mt-10">
  <h2 class="text-xl font-bold mb-4">Comments</h2>
  <div id="disqus_thread"></div>

  <script is:inline>
    (function() {
      const slug = "{slug}";
      const disqusShortname = "sollungomaami";

      // Remove previous embed if it exists (Swup page transitions)
      const existing = document.getElementById('disqus_thread');
      if (existing) existing.innerHTML = '';

      // Configure Disqus
      var disqus_config = function () {
        this.page.url = "https://www.sollungomaami.com/posts/" + slug;
        this.page.identifier = slug;
      };

      // Remove existing script to avoid double loading
      const oldScript = document.querySelector('script[src*="' + disqusShortname + '.disqus.com/embed.js"]');
      if (oldScript) oldScript.remove();

      // Load Disqus
      var d = document, s = d.createElement('script');
      s.src = 'https://' + disqusShortname + '.disqus.com/embed.js';
      s.setAttribute('data-timestamp', +new Date());
      (d.head || d.body).appendChild(s);
    })();
  </script>

  <noscript>
    Please enable JavaScript to view the 
    <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
  </noscript>
</section>
</PostLayout>
