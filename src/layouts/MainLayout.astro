---
import Sidebar from "../components/Sidebar.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import MaamiConfig from "../../maami.config";

interface Props {
  title?: string;
  subTitle?: string;
  bannerImage?: string;
  // This is the new prop we need to pass down
  allPosts?: any[]; 
}

const { title, subTitle, bannerImage, allPosts } = Astro.props;
---

<html lang={MaamiConfig.lang} class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - ${MaamiConfig.title}` : MaamiConfig.title}</title>
    </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
    
    <Navbar />

    <main class="container mx-auto px-4 py-8 md:flex md:gap-8">
      
      <aside class="md:w-1/4 hidden md:block">
        <Sidebar allPosts={allPosts} />
      </aside>

      <div class="md:w-3/4 min-w-0">
        <slot />
      </div>

    </main>

    <Footer />
    
  </body>
</html>
